@model BookLibrary.Models.AccountViewModel.LoginViewModel

@{
    ViewData["Title"] = "Log In";
}



<form method="post" asp-action="Login" asp-controller="Account" class="form-horizontal">
    <div class="box">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h2>Sign In</h2>
        <div class="form-group mt-2 mb-2">
            <input class="line" asp-for="Email" placeholder="Email" />
        </div>

        <div class="form-group mt-2 md-2">
            <input class="line" asp-for="Password" placeholder="Password" />
        </div>

        <div class="form-group mt-2 md-2">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>

        <div class="form-group mt-2">
            <button class="btn btn-primary" type="submit">Sign In</button>
        </div>
    </div>
</form>